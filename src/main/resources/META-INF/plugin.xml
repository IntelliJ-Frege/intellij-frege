<idea-plugin>
    <id>com.plugin.frege</id>
    <name>Plugin display name here</name>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends optional="true">com.intellij.gradle</depends>
    <depends>org.jetbrains.plugins.gradle</depends>

    <extensions defaultExtensionNs="com.intellij">

        <moduleBuilder id="FREGE_MODULE_BUILDER" builderClass="com.plugin.frege.module.FregeModuleBuilder" order="first" />
        <moduleType id="FREGE_MODULE_TYPE" implementationClass="com.plugin.frege.module.FregeModuleType"/>
        <runConfigurationProducer implementation="com.plugin.frege.linemarker.FregeRunConfigurationProducer" />

        <fileType name="Frege File" implementationClass="com.plugin.frege.FregeFileType"
                  fieldName="INSTANCE" language="Frege" extensions="fr"/>
        <lang.parserDefinition language="Frege"
                               implementationClass="com.plugin.frege.parser.FregeParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Frege"
                                       implementationClass="com.plugin.frege.highlighter.FregeSyntaxHighlighterFactory"/>
        <lang.braceMatcher language="Frege"
                           implementationClass="com.plugin.frege.highlighter.FregeBraceMatcher"/>
        <lang.commenter language="Frege"
                        implementationClass="com.plugin.frege.editor.FregeCommenter"/>
        <lang.findUsagesProvider language="Frege"
                                 implementationClass="com.plugin.frege.findusages.FregeFindUsagesProvider"/>
        <colorSettingsPage implementation="com.plugin.frege.highlighter.FregeColorSettingsPage"/>
        <annotator language="Frege" implementationClass="com.plugin.frege.annotator.FregeAnnotator"/>


<!--     not yet implemented-->
<!--     <codeInsight.lineMarkerProvider language="Frege" implementationClass="com.plugin.frege.linemarker.FregeRunLineMarkerProvider" />-->
        <runLineMarkerContributor language="Frege" implementationClass="com.plugin.frege.linemarker.FregeRunLineMarkerContributor" />

    </extensions>

    <extensions defaultExtensionNs="org.jetbrains.plugins.gradle">
        <frameworkSupport implementation="com.plugin.frege.gradle.GradleFregeFrameworkSupportProvider" />
    </extensions>
    <actions>
        <!-- Add your actions here -->
        <action id="com.plugin.frege.linemarker.FregeRunAction" class="com.plugin.frege.linemarker.FregeRunAction"
                text="FregeRunAction" description="TMP TODO DELETE" icon="AllIcons.RunConfigurations.TestState.Run">
<!--                icon="com.intellij.icons.AllIcons.RunConfigurations.TestState.Run"-->

            <add-to-group group-id="ExternalSystem.ProjectRefreshActionGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
